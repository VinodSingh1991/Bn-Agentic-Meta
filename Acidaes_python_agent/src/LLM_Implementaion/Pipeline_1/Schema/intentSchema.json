{
  "type": "object",
  "properties": {
    "intent": {
      "type": "string",
      "enum": [
        "SHOW", "LIST", "READ", 
        "CREATE", "UPDATE", "DELETE",
        "AGGREGATE", "COUNT", "COMPARE", "SUMMARIZE"
      ]
    },
    "entity": {
      "type": "string",
      "description": "Primary object of interest",
      "enum": [
        "account", "lead", "contact", "opportunity", "case", "activity",
        "transaction", "loan", "policy", "claim", "investment", "portfolio",
        "payment", "branch", "customer", "employee", "campaign"
      ]
    },
    "fields": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Specific fields or attributes requested (e.g., balance, status)"
    },
    "filters": {
      "type": "array",
      "description": "Filters applied to the primary entity's fields only",
      "items": {
        "type": "object",
        "properties": {
          "field": { "type": "string" },
          "operator": {
            "type": "string",
            "enum": [
              "EQUALS", "NOT_EQUALS",
              "CONTAINS", "STARTS_WITH", "ENDS_WITH",
              "GT", "GTE", "LT", "LTE",
              "BETWEEN", "IN", "NOT_IN"
            ]
          },
          "value": {
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" },
              { "type": "null" },
              {
                "type": "array",
                "items": { "type": ["string", "number", "boolean", "null"] }
              }
            ]
          }
        },
        "required": ["field", "operator", "value"]
      }
    },
    "relatedEntities": {
      "type": "array",
      "description": "Entities that need to be joined/related to the primary entity",
      "items": {
        "type": "object",
        "properties": {
          "entity": { "type": "string" },
          "relationship": { 
            "type": "string", 
            "enum": [
              "BELONGS_TO",
              "HAS_MANY", 
              "HAS_ONE",
              "MANY_TO_MANY",
              "OWNS",
              "ASSIGNED_TO",
              "CREATED_BY",
              "RELATED_TO"
            ],
            "description": "Standardized relationship type between entities"
          },
          "filters": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": { "type": "string" },
                "operator": {
                  "type": "string",
                  "enum": [
                    "EQUALS", "NOT_EQUALS",
                    "CONTAINS", "STARTS_WITH", "ENDS_WITH",
                    "GT", "GTE", "LT", "LTE",
                    "BETWEEN", "IN", "NOT_IN"
                  ]
                },
                "value": {
                  "oneOf": [
                    { "type": "string" },
                    { "type": "number" },
                    { "type": "boolean" },
                    { "type": "null" },
                    {
                      "type": "array",
                      "items": { "type": ["string", "number", "boolean", "null"] }
                    }
                  ]
                }
              },
              "required": ["field", "operator", "value"]
            }
          }
        },
        "required": ["entity", "relationship"]
      }
    },
    "groupBy": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Fields used to group results (e.g., region, branch, product)"
    },
    "aggregation": {
      "type": "object",
      "properties": {
        "function": {
          "type": "string",
          "enum": ["SUM", "AVG", "COUNT", "MAX", "MIN", "DISTINCT_COUNT"]
        },
        "field": { "type": "string" }
      },
      "required": ["function", "field"]
    },
    "sort": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "field": { "type": "string" },
          "direction": { "type": "string", "enum": ["ASC", "DESC"] }
        },
        "required": ["field", "direction"]
      }
    },
    "limit": { "type": ["integer", "null"] },
    "offset": { "type": ["integer", "null"] },
    "timeRange": {
      "type": "object",
      "properties": {
        "from": { "type": "string", "format": "date-time" },
        "to": { "type": "string", "format": "date-time" },
        "granularity": { "type": "string", "enum": ["day", "week", "month", "quarter", "year"] }
      }
    },
    "comparison": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "entity": { "type": "string" },
          "filters": { "$ref": "#/properties/filters" },
          "timeRange": { "$ref": "#/properties/timeRange" }
        },
        "required": ["entity"]
      }
    },
    "outputFormat": {
      "type": "string",
      "enum": ["table", "list", "summary", "chart", "text"]
    }
  },
  "required": ["intent", "entity"]
}
